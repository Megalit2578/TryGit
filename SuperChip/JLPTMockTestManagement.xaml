<Window x:Class="SuperChip.JLPTMockTestManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperChip"
        mc:Ignorable="d"
        Title="JLPTMockTestManagement" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Grid Background="Beige">
            <StackPanel><!--SelectedCellsChanged="dgvDisplay_SelectedCellsChanged"-->
                <StackPanel>
                    <DataGrid Name="dgvDisplay" Grid.Column="0" Grid.Row="0" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="TestId" Binding="{Binding TestId}"/>
                            <DataGridTextColumn Header="TestTitle" Binding="{Binding TestTitle}"/>
                            <DataGridTextColumn Header="SkillArea" Binding="{Binding SkillArea}"/>
                            <DataGridTextColumn Header="StartTime" Binding="{Binding StartTime}"/>
                            <DataGridTextColumn Header="EndTime" Binding="{Binding EndTime}"/>
                            <DataGridTextColumn Header="Candidate" Binding="{Binding Candidate.FullName}"/>
                            <DataGridTextColumn Header="Score" Binding="{Binding Score}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <!--<StackPanel Orientation="Horizontal">
                    <Label Content="Search by project title" Width="150"/>
                    <TextBox Name="txtSearchByProjectTitle" Width="200" Margin="0 0 10 0"/>
                    <Button x:Name="btnSearchByProjectTitle" Content="Search By ProjectTitle" Click="btnSearchByProjectTitle_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Search by research field" Width="150"/>
                    <TextBox Name="txtSearchBySkillArea" Width="200" Margin="0 0 10 0"/>
                    <Button x:Name="btnSearchBySkillArea" Content="Search By Research Field" Click="btnSearchBySkillArea_Click"/>
                </StackPanel>-->
                <StackPanel>
                    <UniformGrid Columns="2" Margin="5">
                        <Label Content="TestId" Width="100"/>
                        <TextBox Name="txtTestId" Width="200" Margin="0 0 10 0"/>

                        <Label Content="TestTitle" Width="100"/>
                        <TextBox Name="txtTestTitle" Width="200" Margin="0 0 10 0"/>

                        <Label Content="SkillArea" Width="100"/>
                        <TextBox Name="txtSkillArea" Width="200" Margin="0 0 10 0"/>

                        <Label Content="StartTime" Width="100"/>
                        <DatePicker Name="dpStartTime" Width="200" Margin="0 0 10 0"/>

                        <Label Content="EndTime" Width="100"/>
                        <DatePicker Name="dpEndTime" Width="200" Margin="0 0 10 0"/>

                        <Label Content="CandidateId" Width="145"/>
                        <TextBox Name="txtCandidateId" Width="200" Margin="0 0 10 0"/>

                        <Label Content="Score" Width="100"/>
                        <TextBox Name="txtScore" Width="200" Margin="0 0 10 0"/>
                    </UniformGrid>
                </StackPanel>
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnDelete" Click="btnDelete_Click" Content="Delete" Margin="0 0 20 0" Width="50"/>
                    <Button x:Name="btnAdd" Click="btnAdd_Click" Content="Add" Margin="0 0 20 0" Width="50"/>
                    <Button x:Name="btnUpdate" Click="btnUpdate_Click" Content="Update" Margin="0 0 20 0" Width="50"/>
                </StackPanel>-->
            </StackPanel>
        </Grid>

    </Grid>
</Window>
