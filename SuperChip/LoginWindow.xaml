<Window x:Class="SuperChip.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperChip"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Background="#FF207296">
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Email:" Margin="5" FontFamily="Tahoma" FontSize="23pt" Foreground="Black" Background="#FF2E7D32"/>
            <TextBox x:Name="txtEmail" Width="200" Margin="5" TextAlignment="Left" Height="30" Background="#FFECF9EC"/>

            <Label Content="Password:" Margin="5" FontFamily="Tahoma" FontSize="23pt" Foreground="Black" Background="#FF2E7D32"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="5"/>

            <Button Content="Login" Width="100" Margin="10" Click="BtnLogin_Click"/>
        </StackPanel>

    </Grid>
</Window>
